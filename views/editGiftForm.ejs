<!-- views/updateGiftForm.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Modifier un Cadeau</title>
</head>
<body>
  <h1>Modifier un Cadeau</h1>
  <form action="/gifts/<%= gift.id %>/update" method="post">
    <!-- Remplissez les champs avec les valeurs actuelles du cadeau -->
    <label for="name">Nom du Cadeau:</label>
    <input type="text" id="name" name="name" value="<%= gift.name %>" required>

    <label for="summary">Résumé:</label>
    <textarea id="summary" name="summary" required><%= gift.summary %></textarea>

    <label for="price">Prix:</label>
    <input type="number" id="price" name="price" value="<%= gift.price %>" required>

    <label for="author">Auteur:</label>
    <input type="text" id="author" name="author" value="<%= gift.author %>" required>

    <label for="reservationStartDate">Date de début de réservation:</label>
    <input type="date" id="reservationStartDate" name="reservationStartDate" value="<%= gift.reservationStartDate %>" required>

    <label for="reservationEndDate">Date de fin de réservation:</label>
    <input type="date" id="reservationEndDate" name="reservationEndDate" value="<%= gift.reservationEndDate %>" required>

    <label for="image">Image URL:</label>
    <input type="text" id="image" name="image" value="<%= gift.image %>" required>

    <button type="submit">Modifier le Cadeau</button>
  </form>
  <a href="/gifts/<%= gift.id %>">Retour aux Détails du Cadeau</a>
</body>
</html>
